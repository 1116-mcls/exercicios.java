import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner ler = new Scanner(System.in);

        System.out.println("Digite quantos reais você tem na carteira:");
        Float money = ler.nextFloat();

        Double dolar = money*3.45;

        System.out.println("Você consegue comprar "+dolar+" dólares!");

    }
}
